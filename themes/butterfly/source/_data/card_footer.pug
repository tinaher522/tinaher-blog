// source/_data/card_footer.pug
if theme.card_webinfo.enable
  .card-widget.card-webinfo
    .card-content
      .item-headline
        i.fas.fa-chart-line
        span= _p('aside.card_webinfo.headline')
      .webinfo
        .webinfo-item
          .item-name= _p('aside.card_webinfo.site_wordcount') +" :"
          .item-count= site.posts.reduce((acc, post) => acc + (post.wordcount||0), 0)
